--langdef=systemverilog
--langmap=systemverilog:.sv.svh.svi.svp.v.vh
--regex-systemverilog=/^[ \t]*covergroup[ \t]+([a-zA-Z_0-9]+)/\1/l,covergroup/
--regex-systemverilog=/^[ \t]*(virtual)?[ \t]*class[ \t]+([a-zA-Z_0-9]+)/\2/c,class/
--regex-systemverilog=/^[ \t]*(virtual)?[ \t]*task[ \t]+([a-zA-Z_0-9]+)/\2/t,task/
--regex-systemverilog=/^[ \t]*(virtual)?[ \t]*function[ \t]+([a-zA-Z_0-9]+)[ \t]+([a-zA-Z_0-9]+)/\3/f,function/
--regex-systemverilog=/^[ \t]*module[ \t]+([a-zA-Z_0-9]+)/\1/m,module/
--regex-systemverilog=/^[ \t]*interface[ \t]+([a-zA-Z_0-9]+)/\1/i,interface/
--regex-systemverilog=/^[ \t]*typedef[ \t]+.*[ \t]+([a-zA-Z_0-9]+)[ \t]*;/\1/e,typedef/
--regex-systemverilog=/^[ \t]*`define[ \t]+([a-zA-Z_0-9]+)/`\1/d,define/
--regex-systemverilog=/^[ \t]*package[ \t]+([a-zA-Z_0-9]+)/\1/J,package/
--systemverilog-kinds=+lctfmiedJ